# ===============================================
# B&D CLEANING - ENVIRONMENT VARIABLES TEMPLATE
# ===============================================
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000

# Database
DB_TYPE=sqlite
DB_PATH=./database.sqlite
DB_LOGGING=true

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
MAX_LOGIN_ATTEMPTS=5
BCRYPT_ROUNDS=12

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_RECEIVER=your-email@gmail.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
QUOTE_RATE_LIMIT_MAX_REQUESTS=10

# CORS
CORS_ORIGIN_DEV=http://localhost:3000,http://localhost:3001
CORS_ORIGIN_PROD=https://yourdomain.com

# Business Settings
COMPANY_NAME=Your Company Name
COMPANY_EMAIL=contact@yourcompany.com
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com
DEFAULT_ADMIN_PASSWORD=change-this-password

# Feature Flags
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_QUOTE_SCHEDULING=true